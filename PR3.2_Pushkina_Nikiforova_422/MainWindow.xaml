<Window x:Class="PR3._2_Pushkina_Nikiforova_422.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR3._2_Pushkina_Nikiforova_422"
        mc:Ignorable="d"
        Title="Калькулятор" Height="250" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="Операнд" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBox x:Name="op1" Margin="10" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"></TextBox>
        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="Операнд" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBox x:Name="op2" Margin="10" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"></TextBox>
        <GroupBox Header="Операция" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <StackPanel >
                <RadioButton x:Name="plus" Content="+" FontSize="24" />
                <RadioButton x:Name="minus" Content="-" FontSize="24"/>
                <RadioButton x:Name="umnog" Content="*" FontSize="24"/>
                <RadioButton x:Name="del" Content="/" FontSize="24"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="vichislit" Content="Вычислить" FontSize="20" Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="vichislit_Click"/>
        <TextBlock Grid.Row="0" Grid.Column="10" Grid.ColumnSpan="2" Text="Результат" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBox x:Name="res" IsReadOnly="True" Margin="10" Grid.Row="1" Grid.Column="10" Grid.ColumnSpan="2"></TextBox>
    </Grid>
</Window>